<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/tab_ui_sc">
        <TableLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:padding="10dp"
                     android:paddingTop="1dp"
                     android:id="@+id/tab_ui">

            <TableRow android:layout_width="match_parent" android:paddingTop="4dp" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yimei_opc"
                        android:textSize="16sp"/>

                <EditText
                        android:id="@+id/edt_op"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:nextFocusDown="@id/edt_op"
                        android:hint="@string/yimei_opc"
                        android:tag="@string/yimei_opc"
                        android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/img_new"
                            android:src="@drawable/new_bn"/>

            </TableRow>

            <TableRow android:layout_width="match_parent" android:paddingTop="4dp" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yimei_tray"
                        android:textSize="16sp"/>

                <EditText
                        android:id="@+id/edt_tray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:hint="@string/yimei_tray"
                        android:tag="@string/yimei_tray"
                        android:layout_weight="1"/>


            </TableRow>

            <TableRow android:layout_width="match_parent" android:paddingTop="4dp" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yimei_lab_sid2"
                        android:textSize="16sp"/>

                    <EditText
                            android:id="@+id/edt_sid1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:enabled="true"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:textColor="@color/text_color"
                            android:hint="@string/yimei_lab_sid2"
                            android:tag="@string/yimei_lab_sid2"
                            android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/img_view"
                            android:src="@drawable/img_view_yanjin"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:paddingTop="4dp" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yimei_lab_sidn"
                        android:textSize="16sp"/>

                <EditText
                        android:id="@+id/edt_sidn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:enabled="true"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:hint="@string/yimei_lab_sidn"
                        android:tag="@string/yimei_lab_sidn"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/img_qrn"
                        android:src="@drawable/qr_bt"/>

            </TableRow>

            <TableRow android:layout_width="match_parent" android:paddingTop="4dp" android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yimei_lab_sidw"
                        android:textSize="16sp"/>

                    <EditText
                            android:id="@+id/edt_sidw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:enabled="true"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:textColor="@color/text_color"
                            android:hint="@string/yimei_lab_sidw"
                            android:tag="@string/yimei_lab_sidw"
                            android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/img_qrw"
                            android:src="@drawable/qr_bt"/>

            </TableRow>

            <TableRow android:layout_width="match_parent" android:paddingTop="8dp">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_okng"
                        android:text="@string/yimei_lab_result"
                        android:layout_span="4"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
            </TableRow>

        </TableLayout>
    </ScrollView>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tab_ui_sc" android:padding="5dp"
                    android:background="@color/mainBKColor">
        <com.yimeinew.tableui.TablePanelView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/table_view">
            <ListView
                    android:id="@+id/data_list_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fastScrollEnabled="false"
                    android:overScrollMode="never"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>
        </com.yimeinew.tableui.TablePanelView>
    </RelativeLayout>

</RelativeLayout>